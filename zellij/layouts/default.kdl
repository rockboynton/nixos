layout {
    cwd "~/sources"
    default_tab_template hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
        children
    }
    new_tab_template hide_floating_panes=true {
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
        pane
    }
}
